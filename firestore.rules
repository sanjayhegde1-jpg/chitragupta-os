rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Protected System Config
    match /system_config/{docId} {
        allow read, write: if request.auth != null; // Refine this to checking admin rights in production
    }
  }
}
