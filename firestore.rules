rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // Minimal allowlist for elevated config access.
    // Replace with custom claims or RBAC when available.
    function isDirector() {
      return isSignedIn() && request.auth.token.email == "director@chitragupta.os";
    }

    match /system_config/{docId} {
      allow read, write: if isDirector();
    }

    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
