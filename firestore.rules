rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isDirector() {
      return isSignedIn() && request.auth.token.director == true;
    }

    match /system_config/{docId} {
      allow read, write: if isDirector();
    }

    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
