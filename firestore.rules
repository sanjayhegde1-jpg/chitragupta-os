rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isDirector() {
      return isSignedIn() && request.auth.token.director == true;
    }

    match /system_config/{docId} {
      allow read, write: if isDirector();
    }

    match /enquiries/{docId} {
      allow read: if isSignedIn();
      allow write: if isDirector();
    }

    match /leads/{docId} {
      allow read: if isSignedIn();
      allow write: if isDirector();
    }

    match /leads/{leadId}/messages/{messageId} {
      allow read: if isSignedIn();
      allow write: if isDirector();
    }

    match /approvals/{docId} {
      allow read: if isSignedIn();
      allow write: if isDirector();
    }

    match /catalog_items/{docId} {
      allow read: if isSignedIn();
      allow write: if isDirector();
    }

    match /quotes/{docId} {
      allow read: if isSignedIn();
      allow write: if isDirector();
    }

    match /tasks/{docId} {
      allow read: if isSignedIn();
      allow write: if isDirector();
    }

    match /metrics_daily/{docId} {
      allow read, write: if isDirector();
    }

    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
